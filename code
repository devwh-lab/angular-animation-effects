/* Webkit Scrollbar */
::-webkit-scrollbar {
  width: 4px; /* Width of the scrollbar */
  height: 4px;
}
/* Handle */
::-webkit-scrollbar-thumb {
  background: #888; /* Color of the scrollbar */
}
/* Track */
::-webkit-scrollbar-track {
  background: #f1f1f1;
}
/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: $primary-color;
}
