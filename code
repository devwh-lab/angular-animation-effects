import { Directive, ElementRef, Renderer2 } from '@angular/core';

@Directive({
  selector: '[fgbShimmerLoader]',
})
export class ShimmerLoaderDirective {
  constructor(private el: ElementRef, private renderer: Renderer2) {
    this.applyShimmerEffect();
  }

  applyShimmerEffect() {
    this.renderer.setStyle(this.el.nativeElement, 'background', '#f6f7f8');
    this.renderer.setStyle(
      this.el.nativeElement,
      'background',
      `linear-gradient(
      90deg,
      #f6f7f8 25%,
      #edeef1 50%,
      #f6f7f8 75%
    )`
    );
    this.renderer.setStyle(
      this.el.nativeElement,
      'background-size',
      '200% 100%'
    );
    this.renderer.setStyle(
      this.el.nativeElement,
      'animation',
      'shimmer 1.5s infinite'
    );
    this.renderer.setStyle(this.el.nativeElement, 'border-radius', '4px');
  }
}


-- 

/* Custom scroll bar */
.custom-scroll-bar {
  /* width */
  ::-webkit-scrollbar {
    width: 4px;
  }
  /* Track */
  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }
  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #888;
  }
  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: $primary-color;
  }
}
